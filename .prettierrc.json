{
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "proseWrap": "preserve",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 200
        }
      },
      {
        "files": ["*.css", "*.scss", "*.less"],
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
  